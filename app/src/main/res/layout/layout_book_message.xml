<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_message_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/error_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/icon_booknerd"
            android:contentDescription="@string/description_app_icon"/>

        <com.ronakmanglani.booknerd.ui.view.RobotoRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dist_large"
            android:layout_marginRight="@dimen/dist_large"
            android:gravity="center"
            android:text="@string/detail_message"
            android:textSize="@dimen/text_large"/>

    </LinearLayout>

</FrameLayout>